{
  "name": "md",
  "version": "2025.4.7",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach -viA --all run clean",
    "tsc": "yarn workspaces foreach -vA run tsc --noEmit",
    "fmt": "yarn fmt:eslint . && yarn fmt:prettier .",
    "generate": "yarn workspaces foreach -pv --all run generate",
    "build": "yarn workspaces foreach -Aipvt --topological run build",
    "test": "yarn workspaces foreach -pv --all run test --passWithNoTests",
    "bump": "yarn workspaces foreach -v --all version",
    "fmt:eslint": "eslint --no-warn-ignored --ext  .ts,.tsx,.json --fix",
    "fmt:prettier": "prettier --write",
    "fmt:cspell": "cspell --gitignore --no-progress --no-must-find-files"
  },
  "workspaces": [
    "core",
    "core-api",
    "web-console",
    "infrastructure",
    "cli"
  ],
  "packageManager": "yarn@4.5.3",
  "devDependencies": {
    "@rushstack/eslint-patch": "1.12.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "chromatic": "13.1.3",
    "cspell": "9.2.0",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  }
}
